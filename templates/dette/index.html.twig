{% extends 'base.html.twig' %}

{% block main %}

<div
    class="container mb-5" 
>
    <div class="card mt-5">
        <div class="card-header">Liste des Dettes</div>
        <div class="card-body p-3">
        <div class="row my-2 d-flex justify-content-end">
        <a href="#"
                                type="button"
                                class="btn btn-outline-dark col-1"
                            >
                                Create
                            </a>

                        
        </div> 
            <div
                class="table-responsive"
            >
                <table
                    class="table table-light table-bordered table-striped"
                >
                    <thead>
                        <tr>
                            <th scope="col">Date</th>
                            <th scope="col">Client</th>
                            <th scope="col">Telephone</th>
                            <th scope="col">Montant</th>
                            <th scope="col">MontantVerse</th>
                            <th scope="col">Action</th>
    
                        </tr>
                    </thead>
                    <tbody>
                    {% for dette in dettes %}
                        <tr class="">
                                  
                                    <td scope="row">{{dette.dateAt|date('d-m-Y')}}</td>
                                    <td scope="row">{{dette.client.surname}}</td>
                                    <td scope="row">{{dette.client.telephone}}</td>
                                    <td>{{dette.montant}}</td>
                                    <td>{{dette.montantVerse}}</td>
                                    <td><a
                                        href="{{path("paiement.index",{idDette:dette.id})}}"
                                        type="button"
                                        class="btn btn-outline-dark"
                                    >
                                        Details
                                    </a>
                                    </td>
                        </tr>
                    {% else %}
                        Pas de clients
                    {% endfor %}
                       
                       
                    </tbody>
                </table>
                <nav aria-label="Page navigation" class="mt-2">
                    <ul
                        class="pagination float-end    "
                    >
                        <li class="page-item disabled">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                         {% for i in 1..nbrePages %}
                        <li class="page-item  {{i == page ? 'active' : ''}}" aria-current="page">
                            <a class="page-link" href="?page={{i}}">{{i}}</a>
                        </li>
                         {% endfor %}  
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
                
            </div>
            
        </div>
    </div>
    
   
    
</div>

{% endblock %}
